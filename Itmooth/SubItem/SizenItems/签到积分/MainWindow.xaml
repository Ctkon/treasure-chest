        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:签到积分"
        mc:Ignorable="d"
        Title="签到计分版" Height="900" Width="400">
    <Grid>
        <ScrollViewer>
            <StackPanel Margin="5">
                <GroupBox Header="计分板">
                    <StackPanel>
                        <Label/>
                        <WrapPanel>
                            <Button FontFamily="Segoe MDL2 Assets" Content="&#xE70F;" Click="Edit"/>
                            <Label/>
                            <Button FontFamily="Segoe MDL2 Assets" Content="&#xE72C;" Click="Reload"/>
                        </WrapPanel>
                        <Label/>
                        <Separator/>
                        <Label/>
                        <StackPanel x:Name="board">
                            
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <Label/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
