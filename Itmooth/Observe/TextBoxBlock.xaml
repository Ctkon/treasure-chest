<UserControl x:Class="Observe.TextBoxBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Observe"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.ContextMenu>
        <ContextMenu>
            <MenuItem Header="重命名" Click="Rename"/>
        </ContextMenu>
    </UserControl.ContextMenu>
    <Grid>
        <TextBlock x:Name="show" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="input" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
