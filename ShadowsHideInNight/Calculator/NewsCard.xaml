<UserControl x:Class="Calculator.NewsCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calculator"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Border Margin="10" CornerRadius="25" Cursor="Hand" Background="#FFD1D1D1">
        <Grid Margin="10">
            <Label Height="50" VerticalAlignment="Top" Content="新闻标题" FontSize="28"/>
            <TextBlock Margin="0,50,0,0" FontSize="18" TextWrapping="Wrap">
                <TextBlock.Text>
                    新闻内容：一男子鲸鱼女上司在办公室内激情缠绵
                </TextBlock.Text>
            </TextBlock>
        </Grid>
    </Border>
</UserControl>
